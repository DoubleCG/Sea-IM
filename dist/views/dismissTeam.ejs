<!DOCTYPE html>
<html lang="zh-CN">
<head>
	<meta charset="UTF-8">
	<title>Seanet-Dismissteam</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
	<style>
	body{
        background-size:100%;
    }
    @media (max-width: 970px) {
        body{
      		background-color:#669999;
        }
    }
	.container{
		width:320px;
		display: block;
		padding:10px;
		margin:15% auto;
		border:solid 2px #B71210;
	}
	.tipID,.tipPW{
		color:red;
	}
	#sub,#back{
		margin-left: 20px;
		width:100px;
		height:33px;
		display: inline-block;
	}
	#dismissForm{
		height:130px;
	}
	#dismissForm h5{
		display: inline-block;
		padding-right: 10px;
		width:70px;
		text-align: right;
	}
	</style>
</head>
<body>
	<div class="container" id='dismissTeam'>
		<form id='dismissForm' action="/success_dismissTeam" method="post">
		<h4 style='text-align: center;'>请确认团队ID和口令：</h4>
		<div><h5>UID:</h5><input type="text" id='ID' name="ID"></div>
		<h4 class='tipID'></h4>
		<div><h5>团队口令:</h5><input type="text" id='PW' name="PW"></div>
		<h4 class='tipPW'></h4>
		<br>
		<br>
		</form>
		<input id='sub' v-on:click='subOnclick' type="button" class="btn btn-danger" value='确认'>
		<button id='back' v-on:click='backtomainpage'>返回主页</button>
	</div>
	
<script src='https://cdn.bootcss.com/vue/2.5.7/vue.min.js'></script>
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.slim.min.js"></script>
<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src='js/lib.js'></script> 
<script>
new Vue({
	el:'#dismissTeam',
	data:{
		uid:'<%=uid%>',
		pw:'<%=pw%>',
		dataforback:{
			uid:'<%=uid%>',
		}
	},
	methods:{
		subOnclick:function(){
		var ID = document.getElementById('ID').value.trim();
		var PW = document.getElementById('PW').value.trim();
		console.log(this.uid,this.pw)
		var issameID = issame(ID,this.uid),
			issamePW = issame(PW,this.pw);
		if(issameID&&issamePW){
			document.getElementById('dismissForm').submit();
		}else{
			if(!issameID){
				document.querySelector('.tipID').innerText = 'ID False';
			}else{
				document.querySelector('.tipID').innerText = '';
			}
			if(!issamePW){
				document.querySelector('.tipPW').innerText = 'Password False';
			}else{
				document.querySelector('.tipPW').innerText = '';
			}
		}
		},
		backtomainpage:function(){
			zPost('/main',this.dataforback);
		}
	}
})
</script>
</body>
</html>