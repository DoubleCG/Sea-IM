    <style>
    *{
        transition:all 0.3s;
    }
    body{
        background: url(img/dot2.png);
        background-repeat: repeat;

    }

    .container{
        z-index:100;
        border-radius:0.5em; 
        overflow: hidden;
        margin:10% auto;
        height:348px;
        width: 830px;
        background: url(img/haitun.png);
    }

    #loginForm{
        border: solid 2px #fff;
        box-shadow: 0 0 3px #fff;
        border-radius: 0.5em;
        display: block;
        margin:10px auto 50px auto;
        background: rgba(250,250,250,0.4);
        visibility: hidden;
        opacity: 0.1;
        padding:20px;
        max-width:400px;
    }

    #login:hover #loginForm{
        visibility: visible;
    }

    #loginForm:hover{
        opacity: 1;
    }
    @media (max-width: 450px) {
        .container{
            width: 100%;
            margin-top: 20%;
            padding:0;
            border-radius: 0;
        }
        #loginForm{
            width:100%;
            visibility: visible;
            opacity: 1;
            padding:5px;
        }
    }
    @media (max-width: 768px) {
        #loginForm{
            padding:10px;
        }
    }
    h1{
        text-align: center;
    }
    h1 img{
        width:100%;
        height:50%;
    }
    #tipinfo{
        text-align: center;
        color:#FFF63E;
    }
    #chooseRL{
        margin-top:20px;
        width:100%;
    }
    #uid,#password{
        height:40px;
    }
    #submit{
        font-weight: 600;
        width:100%;
        height:40px;
        font-size:1.4em;
    }
    #regist{
        line-height: 10px;
        font-weight: 600;
        margin-top:5px;
        width:65%;
        height:25px;
    }
    #forget{
        padding-left: 20px;
        margin-top:5px;
        line-height: 10px;
        float: right;
        width:30%;
        height:25px;
    }


