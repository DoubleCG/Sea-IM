<!--<![endif]-->
<!-- <script src='js/lib.js'></script> -->
<script src='js/index.js'></script>
<script>
	var initailTeam = {
		id:'<%=id%>',
		pw:'<%=pw%>'
	}
	console.log(initailTeam)
	document.getElementById('sub').onclick=function(){
		var ID = document.getElementById('ID').value.trim();
		var PW = document.getElementById('PW').value.trim();

		var isSameID = isSame(ID,initailTeam.id),
			isSamePW = isSame(PW,initailTeam.pw);
		if(isSameID&&isSamePW){
			document.getElementById('dismissForm').submit();
		}else{
			if(!isSameID){
				document.querySelector('tipID').innerText = 'ID False';
			}else{
				document.querySelector('tipID').innerText = '';
			}
			if(!isSamePW){
				document.querySelector('tipPW').innerText = 'Password False';
			}else{
				document.querySelector('tipPW').innerText = '';
			}
		}

	}
	function isSame(o,k){
		return o===k?true:false;
	}

document.querySelector('#back').onclick = function(){
	var data = {
		username:initailTeam.id
	}
	formPostUrl('/main',data);
}
	
</script>
</body>
</html>